<body>
  <div class="scene" id="scene">
    <div class="notepad" id="notepad"></div>
  </div>

  <!-- Notepad overlay -->
  <div class="notepad-overlay" id="notepadOverlay">
    <div class="notepad-container">
      <button class="close-btn" id="closeBtn">&times;</button>
      <div class="credential-form">
        <div class="form-title">THERAPIST SIGN-IN</div>
        <form id="credentialForm">
          <div class="form-group">
            <label for="username">DR. NAME:</label>
            <input type="text" id="username" name="username" placeholder="Enter your name..." required>
          </div>
          <div class="form-group">
            <label for="password">PASSWORD:</label>
            <input type="password" id="password" name="password" placeholder="••••••••" required>
          </div>
          <div class="form-group">
            <label for="license">LICENSE #:</label>
            <input type="text" id="license" name="license" placeholder="e.g. PSY12345" required>
          </div>
          <button type="submit" class="submit-btn">Begin Session</button>
        </form>
      </div>
    </div>
  </div>

<script>
  const scene = document.getElementById('scene');
  const notepad = document.getElementById('notepad');
  const notepadOverlay = document.getElementById('notepadOverlay');
  const closeBtn = document.getElementById('closeBtn');
  const credentialForm = document.getElementById('credentialForm');

  // Show notepad form when clicking the notepad
  notepad.addEventListener('click', (e) => {
    e.stopPropagation();
    notepadOverlay.classList.add('visible');
  });

  // Close notepad when clicking the close button
  closeBtn.addEventListener('click', () => {
    notepadOverlay.classList.remove('visible');
    credentialForm.reset();
  });

  // Close notepad when clicking outside the form
  notepadOverlay.addEventListener('click', (e) => {
    if (e.target === notepadOverlay) {
      notepadOverlay.classList.remove('visible');
      credentialForm.reset();
    }
  });

  // Handle form submission
  credentialForm.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(credentialForm);
    const credentials = {
      username: formData.get('username'),
      password: formData.get('password'),
      license: formData.get('license')
    };
    
    console.log('Therapist credentials:', credentials);
    alert(`Welcome, Dr. ${credentials.username}! Session starting...`);
    
    notepadOverlay.classList.remove('visible');
    credentialForm.reset();
  });

  // Close notepad with Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && notepadOverlay.classList.contains('visible')) {
      notepadOverlay.classList.remove('visible');
      credentialForm.reset();
    }
  });
</script>
</body>
